---
layout: "layout.njk"
bodyClass: layout-post # Aggiungi questa riga
---
<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
  </header>

  <time class="post-date" datetime="{{ page.date | date('yyyy-MM-dd') }}">
    Published on {{ page.date | date('dd LLLL yyyy') }}
  </time>

  <div class="post-content">
    {{ content | safe }}
  </div>
</article>